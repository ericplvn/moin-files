!#/bin/bash

set -e

BACKUP_NAME="/home/ericplvn/Documents/backups/linode-backup-monthly-`date +%Y%m%d_%H%M%S`.tar.gz"

TO_BACKUP="/srv/wiki /srv/nginx /home/ericplvn/Documents/code/moin-files"

TARGET_DIR=ericplvn@themountain.no-ip.org:~/Documents/linode/monthly/

tar -czvf $BACKUP_NAME $TO_BACKUP

scp $BACKUP_NAME $TARGET_DIR

rm $BACKUP_NAME